        <Button  Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="MinButton" Click="btnMin_Click" Height="28" HorizontalAlignment="Right" Margin="0,9,50,0"  VerticalAlignment="Top" Width="28" ClipToBounds="False">
